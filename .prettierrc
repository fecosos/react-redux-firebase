{
  "requirePragma": true,
  "overrides": [
    {
      "files": [
        "*.jsx",
        "*.js"
      ],
      "options": {
        "jsxBracketSameLine": true,
        "printWidth": 100,
        "requirePragma": false,
        "semi": true,
        "singleQuote": true,
        "tabWidth": 2,
        "trailingComma": "none",
        "useTabs": false
      }
    }
  ]
}